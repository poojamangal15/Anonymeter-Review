root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cfg]
indent_style = space
indent_size = 8

[*.{yml,yaml,md,markdown}]
indent_style = space
indent_size = 2

[*.{sh,py,pyi,js,ts,json,xml,css,handlebars}]
indent_style = space
indent_size = 4

[*.py]
profile = black

[*.html]
indent_style = space
indent_size = 2
max_line_length=120
